int utn_getString(int * pNumeroIngresado,char * mensaje,char * mensajeError,
		int maximo, int minimo, int maximoDeReintentos){

	int buffer;
	int retorno;
	retorno = -1;

	if(pNumeroIngresado != NULL && maximo >= minimo && maximoDeReintentos>= 0){
		do{
			printf("%s", mensaje);
			//scanf("%d", &auxNumeroIngresado);
			if(tomarDato(&buffer) == 0 && buffer >=minimo && buffer <=maximo){
			maximoDeReintentos--;

						*pNumeroIngresado = buffer;
						retorno = 0;
						break;
			}else{
				printf("%s", mensajeError);
			}

		}while(maximoDeReintentos > 0);
	}

	return retorno;
}





int tomarDato(char * cadena, int longitud){
	int retorno = -1;
	int i;
	char bufferString[4090];
	if (cadena != NULL && longitud>0){
		for (i=0;i<longitud;i++)
		{
		printf("Ingrese valor a cargar en el vector");
		scanf("%d",&bufferString[i]);
		}
	}


	return retorno;
}



 int esUnArrayDeChar(char * cadena, int longitud){
	int i;
	int retorno;

	i=0;
	retorno = -1;

	if(cadena != NULL && longitud >0){
		for(i=0; cadena[i]!= '\0' && i <longitud; i++){
			if((cadena[i] < 'A' || cadena [i] > 'Z') && ((cadena[i] < 'a' || cadena [i] > 'z') )){

				retorno = 0;
				break;
			}
		}
	}
	return retorno;

}
