int cargar(char * array ){

	char buffer;
	int retorno ;
	retorno = -1;

	if ( array !=NULL){
	int nombre[60],i;
	for (i=0;i<60;i++){
		scanf("%c",&nombre[i]);
	}

	if(utn_validateArrayChar == 0){
		retorno = 0;
	}
